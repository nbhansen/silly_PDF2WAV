# =================================
# PDF to Audio Converter Configuration
# =================================

# ===== CORE TTS SETTINGS =====
TTS_ENGINE=gemini                    # Options: gemini, piper
GOOGLE_AI_API_KEY=your_api_key_here  # Required for Gemini TTS/LLM

# ===== FILE HANDLING =====
UPLOAD_FOLDER=uploads
AUDIO_FOLDER=audio_outputs
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=pdf              # Comma-separated: pdf,docx,txt
AUDIO_EXTENSIONS=wav,mp3            # Supported audio formats

# ===== PROCESSING SETTINGS =====
ENABLE_TEXT_CLEANING=true          # Use LLM for text enhancement
ENABLE_SSML=true                   # Apply SSML markup for better speech
DOCUMENT_TYPE=research_paper       # Options: research_paper, literature_review, general
ENABLE_ASYNC_AUDIO=true           # Parallel audio generation
MAX_CONCURRENT_TTS_REQUESTS=4     # Concurrent TTS requests
CHUNK_SIZE=20000                  # Text chunk size for processing

# ===== FILE MANAGEMENT =====
ENABLE_FILE_CLEANUP=true          # Auto-cleanup old files
MAX_FILE_AGE_HOURS=24.0           # Clean files older than N hours
AUTO_CLEANUP_INTERVAL_HOURS=6.0   # Cleanup check interval
MAX_DISK_USAGE_MB=1000           # Max disk usage before forced cleanup

# ===== GEMINI SPECIFIC =====
GEMINI_MODEL_NAME=gemini-2.5-flash-preview-tts     # TTS Model: gemini-2.5-flash-preview-tts, gemini-2.5-pro-preview-tts
GEMINI_VOICE_NAME=Kore                 # Voice: Charon, Kore, Aoede, Leda
GEMINI_MIN_REQUEST_INTERVAL=2.0        # Rate limiting delay (seconds)

# ===== PIPER SPECIFIC =====
PIPER_MODEL_NAME=en_US-lessac-medium    # Piper voice model
PIPER_MODELS_DIR=piper_models           # Model storage directory
PIPER_LENGTH_SCALE=1.0                  # Speech speed (0.5-2.0)
PIPER_MODEL_REPOSITORY_URL=https://huggingface.co/rhasspy/piper-voices/resolve/v1.0.0

# ===== AUDIO PROCESSING =====
AUDIO_BITRATE=128k                # MP3 quality: 64k, 128k, 192k, 320k
AUDIO_SAMPLE_RATE=22050          # Audio sample rate: 16000, 22050, 44100
MP3_CODEC=libmp3lame             # MP3 encoder

# ===== PROCESSING TIMEOUTS =====
TTS_TIMEOUT_SECONDS=60           # TTS generation timeout
OCR_TIMEOUT_SECONDS=30           # OCR processing timeout
FFMPEG_TIMEOUT_SECONDS=300       # Audio processing timeout

# ===== OCR SETTINGS =====
OCR_DPI=300                      # Image resolution for OCR
OCR_THRESHOLD=180               # Image binarization threshold
OCR_LANGUAGE=eng                # Tesseract language: eng, fra, deu, spa, etc.

# ===== TEXT PROCESSING =====
LLM_MAX_CHUNK_SIZE=100000       # Max text size for LLM processing
AUDIO_TARGET_CHUNK_SIZE=3000    # Target audio chunk size
AUDIO_MAX_CHUNK_SIZE=5000       # Maximum audio chunk size

# ===== CONFIGURATION FILES =====
VOICE_PERSONAS_CONFIG=config/voice_personas.json
ACADEMIC_TERMS_CONFIG=config/academic_terms_en.json
RATE_LIMITS_CONFIG=config/rate_limits.json
MODEL_CACHE_DIR=model_cache

# ===== WEB SERVER =====
FLASK_HOST=0.0.0.0              # Server host
FLASK_PORT=5000                 # Server port
FLASK_DEBUG=true                # Debug mode

# ===== DEVELOPMENT/TESTING =====
LOG_LEVEL=INFO                  # Logging level: DEBUG, INFO, WARNING, ERROR
ENABLE_DETAILED_LOGGING=false  # Extra verbose logging